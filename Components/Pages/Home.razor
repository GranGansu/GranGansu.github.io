@page "/"

<PageTitle>Cirsa Home</PageTitle>
<div class="absoluto2">
    <div class="banner d-flex flex-column justify-content-center py-xl">
        <div class="absoluto"></div>
        <div class="top">
            <h1>Programa de afiliados</h1>
            <h2>Conviértete en embajador de una multinacional de referencia</h2>
            <button class="btn btn-warning rounded-xl mt-4" type="button">
                <a href="/register">Regístrate</a></button>
        </div>
    </div>
    <div class="mt-5 mb-5">
        <div class="adv">
            @foreach (var v in ventajas)
            {
                <div class="card" >
                    <div class="card-body d-flex">
                        <p class="card-text">@v</p>
                    </div>
                </div>
            }
        </div>
        <div class="mt-4 text-center">
            <h3>Cada día, 25 000 clientes consiguen que sus negocios crezcan gracias a la plataforma de marketing de
                afiliación de Cirsa.</h3>
        </div>
    </div>
</div>

@code {
    string[] ventajas = { "Consigue más puntos", "Más ventajas","Más dinero" };
}